{
  "name": "instatdlr-ts-services",
  "version": "1.0.0",
  "description": "TypeScript services for InstaTLDR",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:bun": "bun build ./src/index.ts --outdir ./dist",
    "start": "node dist/index.js",
    "start:bun": "bun ./dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "dev:bun": "bun --watch src/index.ts",
    "score": "tsx src/scripts/runScorer.ts",
    "score:bun": "bun run src/scripts/runScorer.ts",
    "test:scorer": "tsx src/scripts/testScorer.ts",
    "test:scorer:bun": "bun run src/scripts/testScorer.ts",
    "top-daily": "tsx src/scripts/topDailyPosts.ts",
    "top-daily:bun": "bun run src/scripts/topDailyPosts.ts",
    "summarize": "tsx src/scripts/generateSummaries.ts",
    "summarize:bun": "bun run src/scripts/generateSummaries.ts",
    "clean": "rm -rf data/posts/daily/*.json data/summaries/*.json",
    "clean:keep-latest": "find data/posts/daily -name '*.json' -not -name 'latest.json' -delete && find data/summaries -name '*.json' -not -name 'latest.json' -delete"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "openai": "^4.90.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "bun-types": "latest",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
